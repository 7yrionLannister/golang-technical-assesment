{
    "swagger": "2.0",
    "info": {
        "description": "Report the energy consumption of a set of electricity meters.",
        "title": "Energy Consumption API",
        "contact": {
            "name": "Daniel Fern√°ndez",
            "email": "daniel.fernandez3@u.icesi.edu.co"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:8181",
    "basePath": "/",
    "paths": {
        "/consumption": {
            "get": {
                "description": "Returns the energy consumption for each meter for the period between startDate and endDate.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "consumption"
                ],
                "summary": "Get consumption report",
                "parameters": [
                    {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "collectionFormat": "csv",
                        "description": "Meter ids",
                        "name": "meters_ids",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Start date (format: YYYY-MM-DD)",
                        "name": "start_date",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "End date (format: YYYY-MM-DD)",
                        "name": "end_date",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Kind period (any of [monthly, weekly, daily])",
                        "name": "kind_period",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Consumption report",
                        "schema": {
                            "$ref": "#/definitions/dto.PeriodicConsumptionDTO"
                        }
                    },
                    "400": {
                        "description": "Invalid query params",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.EnergyConsumptionDTO": {
            "type": "object",
            "properties": {
                "active": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "address": {
                    "description": "TODO consume external API",
                    "type": "string"
                },
                "meter_id": {
                    "type": "integer"
                }
            }
        },
        "dto.PeriodicConsumptionDTO": {
            "type": "object",
            "properties": {
                "data_graph": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/dto.EnergyConsumptionDTO"
                    }
                },
                "period": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}